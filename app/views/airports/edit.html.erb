<h1> Edit Airport </h1>

<%= form_for @airport do |f| %>
    
    <p>
        <%= f.label :city %>
        <%= f.text_field :city %>       
    </p>
    <p>
        <%= f.label :country %>
        <%= f.text_field :country %>       
    </p>

    <%= f.submit "Save" %>

<% end %>

<br>
<%= link_to "Back to airport details", airport_path(@airport.id)%>