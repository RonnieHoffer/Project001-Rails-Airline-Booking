<h1> Flight Details </h1>

<div>
<p>
    <label> Flight Number: </label>
    <%=@flight.flight_number%>
</p>
<p>
    <label> Aircraft model: </label>
    <%=@aircraft.model%> (Aircraft ID: <%=@flight.aircraft_id%>)
</p>
<p>
    <label> Departure Airport: </label>
    <%=@departure_airport.city%>, <%=@departure_airport.country%> (Airport ID: <%=@flight.depart_airport_id%>)
</p>
<p>
    <label> Arrival Airport: </label>
    <%=@arrival_airport.city%>, <%=@arrival_airport.country%> (Airport ID: <%=@flight.arriv_airport_id%>)
</p>
<p>
    <label> Date: </label>
    <%= @flight.date %>
</p>
<p>
    <label> Departure Time: </label>
    <%=@flight.depart_time.strftime("%I:%M %p")%>
</p>
<p>
    <label> Arrival Time: </label>
    <%=@flight.arriv_time.strftime("%I:%M %p")%>
</p>
<p>
    <label> Total Economy Class Seats: </label>
    <%=@flight.total_economy_seats%>
</p>
<p>
    <label> Total Business Class Seats: </label>
    <%=@flight.total_business_seats%>
</p>
<p>
    <label> Total First Class Seats: </label>
    <%=@flight.total_first_class_seats%>
</p>
<p>
    <label> Remaining Economy Class Seats: </label>
    <%=@flight.remaining_economy_seats%>
</p>
<p>
    <label> Remaining Business Class Seats: </label>
    <%=@flight.remaining_business_seats%>
</p>
<p>
    <label> Remaining First Class Seats: </label>
    <%=@flight.remaining_first_class_seats%>
</p>
</div>

<%= link_to "Edit this Flight", edit_flight_path %>
<%= link_to "Delete Flight", flight_path(@flight), method: :delete, data: {confirm: "Are you sure?"} %>
<%= link_to "Back to Flight Index", flights_path %>